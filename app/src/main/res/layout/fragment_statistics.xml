<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/redD"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/main_bg">

        <ImageView
            android:layout_marginBottom="@dimen/dm_60"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_main_logo" />

        <TextView
            android:paddingLeft="@dimen/dm_30"
            android:gravity="center_vertical"
            android:textColor="@color/yellow"
            android:text="销售统计"
            android:textSize="@dimen/t22"
            android:layout_alignParentBottom="true"
            android:background="#50000000"
            android:layout_width="match_parent"
            android:layout_height="40dp" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="接单数："
            android:textColor="@color/blackD"
            android:textSize="@dimen/t16" />

        <TextView
            android:id="@+id/tv_order_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dm_15"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/t16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_marginRight="@dimen/dm_30"
        android:background="@color/red" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="货到付款总金额："
            android:textColor="@color/blackD"
            android:textSize="@dimen/t16" />

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/t16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_marginRight="@dimen/dm_30"
        android:background="@color/red" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="微信支付总金额："
            android:textColor="@color/blackD"
            android:textSize="@dimen/t16" />

        <TextView
            android:id="@+id/tv_wx_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="0"
            android:textColor="@color/red"
            android:textSize="@dimen/t16" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_1"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_5"
        android:layout_marginRight="@dimen/dm_30"
        android:background="@color/red" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_20"
        android:layout_marginRight="@dimen/dm_30">

        <RelativeLayout
            android:id="@+id/rl_start_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="开始时间："
                android:textColor="@color/blackD"
                android:textSize="@dimen/t16" />

            <ImageView
                android:id="@+id/iv_start_time_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_15"
                android:src="@drawable/ic_arrow_down" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_start_time_down"
                android:layout_toRightOf="@+id/tv_start_time"
                android:background="@drawable/black_frame">


                <TextView
                    android:id="@+id/tv_start_year"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="年"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_start_month"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="月"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_start_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="日"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_end_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_20"
        android:layout_marginRight="@dimen/dm_30">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="结束时间："
                android:textColor="@color/blackD"
                android:textSize="@dimen/t16" />

            <ImageView
                android:id="@+id/iv_end_time_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dm_15"
                android:src="@drawable/ic_arrow_down" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/iv_end_time_down"
                android:layout_toRightOf="@+id/tv_end_time"
                android:background="@drawable/black_frame">


                <TextView
                    android:id="@+id/tv_end_year"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="年"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_end_month"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="月"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_end_day"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dm_3"
                    android:textColor="@color/blackD"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dm_3"
                    android:text="日"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginTop="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:background="@drawable/tab_bg_off"
        android:gravity="center"
        android:padding="@dimen/dm_10"
        android:text="点  击  查  询"
        android:textColor="@color/yellow"
        android:textSize="@dimen/t18" />


</LinearLayout>