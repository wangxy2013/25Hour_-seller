<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm_200"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dm_15"
        android:src="@drawable/ic_main_logo" />

    <ImageView
        android:id="@+id/iv_qs_app"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dm_50"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_seller" />

    <RelativeLayout
        android:id="@+id/ll_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_qs_app"
        android:layout_marginTop="@dimen/dm_30"
        android:layout_marginLeft="@dimen/dm_30"
        android:layout_marginRight="@dimen/dm_30"
        android:padding="@dimen/dm_30">

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="名称："
            android:textColor="@color/white"
            android:textSize="@dimen/t18" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_account"
            android:background="@drawable/gray_frame_5dp"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t16" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/ll_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_account"
        android:layout_marginLeft="@dimen/dm_60"
        android:layout_marginRight="@dimen/dm_60">

        <TextView
            android:id="@+id/tv_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="密码："
            android:textColor="@color/white"
            android:textSize="@dimen/t18" />

        <EditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dm_5"
            android:layout_toRightOf="@+id/tv_pwd"
            android:background="@drawable/gray_frame_5dp"
            android:hint="请输入登录密码"
            android:inputType="textPassword"
            android:maxLength="18"
            android:padding="@dimen/dm_5"
            android:textColor="@color/blackA"
            android:textSize="@dimen/t16" />

    </RelativeLayout>


    <TextView
        android:id="@+id/tv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pwd"
        android:layout_marginLeft="@dimen/dm_60"
        android:layout_marginTop="@dimen/dm_50"
        android:layout_marginRight="@dimen/dm_60"
        android:background="@drawable/common_yellow_5dp"
        android:gravity="center"
        android:padding="@dimen/dm_10"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="@dimen/t18" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dm_30"
        android:gravity="center"
        android:text="@string/corporate_name"
        android:textColor="@color/white"
        android:textSize="@dimen/t14" />

</RelativeLayout>