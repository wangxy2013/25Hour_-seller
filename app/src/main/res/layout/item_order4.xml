<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dm_10"
        android:layout_marginTop="@dimen/dm_15"
        android:layout_marginRight="@dimen/dm_10"
        android:background="@drawable/gray_frame_5dp"
        android:orientation="vertical"
        android:padding="@dimen/dm_5">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/iv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_shop" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/iv_shop"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_shop_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="黄焖鸡一号店"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S001"
                    android:textColor="@color/redA"
                    android:textSize="@dimen/t14" />

            </LinearLayout>


            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="14:32:12"
                android:textColor="@color/blackA"
                android:textSize="@dimen/t12" />

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dm_5"
            android:background="@color/blueC" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dm_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_customer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="客户姓名:孙悟空"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t14" />

                <TextView
                    android:id="@+id/tv_customer_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_5"
                    android:text="客户电话:13888888888"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t14" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式:"
                        android:textColor="@color/blackC"
                        android:textSize="@dimen/t14" />

                    <TextView
                        android:id="@+id/tv_pay_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="货到付款"
                        android:textColor="@color/redA"
                        android:textSize="@dimen/t14" />


                </LinearLayout>

                <TextView
                    android:id="@+id/tv_customer_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dm_5"
                    android:text="客户地址:南京市栖霞区仙林大道110号99-101"
                    android:textColor="@color/blackC"
                    android:textSize="@dimen/t14" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_navigation"
                android:layout_width="@dimen/dm_90"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/common_yellow_5dp"
                android:gravity="center"
                android:padding="@dimen/dm_5"
                android:visibility="gone"
                android:text="导航到客户"
                android:textColor="@color/white"
                android:textSize="@dimen/t14" />

            <TextView
                android:id="@+id/tv_pickup"
                android:layout_width="@dimen/dm_90"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_navigation"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dm_8"
                android:background="@drawable/common_red_5dp"
                android:gravity="center"

                android:visibility="gone"
                android:padding="@dimen/dm_5"
                android:text="送餐完成"
                android:textColor="@color/white"
                android:textSize="@dimen/t14" />
        </RelativeLayout>


    </LinearLayout>


</LinearLayout>